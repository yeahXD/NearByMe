<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@drawable/nm_007_user_image"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/dsnr_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="DsnrName"
        android:id="@+id/dsnr_name"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="2dp"
        android:layout_alignTop="@+id/dsnr_pic"
        android:layout_toRightOf="@+id/dsnr_pic"
        android:layout_toEndOf="@+id/dsnr_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dsnr will make your hair more trendy, charming and lovely!"
        android:textSize="13sp"
        android:textColor="@color/colorSubText"
        android:id="@+id/dsnr_text"
        android:layout_below="@+id/dsnr_name"
        android:layout_alignLeft="@+id/dsnr_name"
        android:layout_alignStart="@+id/dsnr_name"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"/>

</RelativeLayout>