<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="170dp"
    android:layout_height="360dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/nm_007_review_bg">

    <ImageView
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_width="158dp"
        android:layout_height="209dp"
        android:id="@+id/image_review"
        android:background="#b0b2b7"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="158dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="7dp"
        android:paddingTop="6dp">

        <com.wefika.flowlayout.FlowLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="13dp"
            android:id="@+id/text_tag">


        </com.wefika.flowlayout.FlowLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Large Text"
                android:textSize="15sp"
                android:textColor="#3f4857"
                android:id="@+id/text_sname"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textSize="12sp"
                android:textColor="#3f4857"
                android:id="@+id/text_dname"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/image_userIcon"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"
                app:civ_border_width="0dp"
                android:background="@drawable/nm_007_user_image"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textSize="12sp"
                    android:textColor="#3f4857"
                    android:id="@+id/text_user" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:textColor="#b0b2b7"
                    android:id="@+id/text_writedate"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>