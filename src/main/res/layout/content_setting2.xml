<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="98dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kr.nearbyme.nbm.Setting.SettingActivity"
    tools:showIn="@layout/activity_setting2"
    android:background="#000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:orientation="vertical">
        <Button
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:text="@string/Setting_info"
            android:id="@+id/btn_info"
            android:layout_marginBottom="22dp"
            android:background="@drawable/nm_012_rectangle"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:text="@string/Setting_personinfo"
            android:id="@+id/btn_personinfo"
            android:layout_marginBottom="22dp"
            android:background="@drawable/nm_012_rectangle"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:text="@string/Setting_locationinfo"
            android:id="@+id/btn_locationinfo"
            android:layout_marginBottom="22dp"
            android:background="@drawable/nm_012_rectangle"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:text="@string/Setting_logout"
            android:id="@+id/btn_logout"
            android:layout_marginBottom="22dp"
            android:background="@drawable/nm_012_rectangle"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:text="@string/Setting_delete"
            android:id="@+id/btn_delete"
            android:background="@drawable/nm_012_rectangle"
            android:textColor="#ffffff"/>

    </LinearLayout>

</RelativeLayout>
